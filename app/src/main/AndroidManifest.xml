<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toshibapc.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventInfo"
            android:label="@string/title_activity_event_info"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.toshibapc.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".EventSchedule"
            android:label="@string/title_activity_event_schedule" >
        </activity>
        <activity
            android:name=".EventDetailsActivity"
            android:label="@string/title_activity_event_details" >
        </activity>
        <activity
            android:name=".ExhibitorsActivity"
            android:label="@string/title_activity_exhibitors" >
        </activity>
        <activity
            android:name=".SpeakerActivity"
            android:label="@string/title_activity_speaker" >
        </activity>
        <activity
            android:name=".Venue"
            android:label="@string/title_activity_venue" >
        </activity>
        <activity
            android:name=".SponsorActivity"
            android:label="@string/title_activity_sponsor" >
        </activity>
        <activity
            android:name=".FloorPlanActivity"
            android:label="@string/title_activity_floor_plan" >
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
